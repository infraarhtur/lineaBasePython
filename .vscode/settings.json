{
    //  Configuraci贸n de pruebas con pytest
    "python.testing.pytestArgs": [
        "app",
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,

    //  Configuraci贸n de linting con flake8
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,

    //  Configuraci贸n de formateo con Black
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--line-length", "79",  // Define el l铆mite de caracteres por l铆nea
        "--skip-string-normalization"  // No modifica comillas en strings
    ],

    //  Configuraci贸n del editor para mejorar la legibilidad del c贸digo
    "[python]": {
        "editor.rulers": [79],  // Muestra una l铆nea gu铆a en la columna 79
        "editor.formatOnSaveMode": "file",
        "editor.formatOnSave": true,  // Formatea autom谩ticamente al guardar
        "editor.codeActionsOnSave": {
            "source.organizeImports":"explicit"  // Ordena importaciones al guardar
        }
    },

    //  Configuraci贸n de isort para ordenar importaciones compatible con Black
    "isort.args": [
        "--profile", "black",
        "--line-length", "79"
    ]
}